# Application Configuration
APP_NAME=Agent Workstation
APP_VERSION=1.0.0
DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# LLM Configuration
# 选择LLM提供商: dashscope, openai, azure_openai, zhipuai, volcengine, ollama
LLM_PROVIDER=dashscope
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# ===== 阿里百炼 (DashScope) =====
DASHSCOPE_API_KEY=sk-08f5d6a4a05043d5aaee7b64c282a864
DASHSCOPE_MODEL=qwen-flash  # qwen-max, qwen-plus, qwen-turbo

# ===== OpenAI =====
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4  # gpt-4, gpt-3.5-turbo
OPENAI_BASE_URL=  # 可选，用于代理

# ===== Azure OpenAI =====
AZURE_OPENAI_API_KEY=your_azure_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT=your_deployment_name
AZURE_OPENAI_MODEL=gpt-4

# ===== 智谱AI =====
ZHIPUAI_API_KEY=your_zhipuai_api_key
ZHIPUAI_MODEL=glm-4  # glm-4, glm-3-turbo

# ===== 火山引擎（豆包） =====
VOLCENGINE_API_KEY=your_volcengine_api_key
VOLCENGINE_ENDPOINT_ID=your_endpoint_id
VOLCENGINE_MODEL=doubao-pro

# ===== Ollama (本地) =====
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:latest

# Vector Database (Chroma)
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_NAME=knowledge_base
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agent_workstation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Agent Configuration
MAX_TASK_STEPS=20
MAX_NESTING_DEPTH=3
MAX_RETRY_COUNT=3
TOOL_TIMEOUT=60

# Token Management
MAX_CONTEXT_TOKENS=8000
COMPRESSION_THRESHOLD=0.8
